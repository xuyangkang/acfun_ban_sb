{
  "description": "Bans ACFun posts from somebody that you don't like",
  "manifest_version": 2,
  "name": "ACFun ban somebody",
  "version": "0.3",
  "homepage_url": "https://github.com/xuyangkang/acfun_ban_somebody",
  "content_scripts": [
    {
      "matches": [
        "*://www.acfun.cn/a/ac*"
      ],
      "js": [
        "acfun_ban_somebody.js"
      ]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ]
}